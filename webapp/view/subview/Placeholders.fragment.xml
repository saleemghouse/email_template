<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" width="auto">
	<Table id="tbPlacehld" mode="{=${oTemp>/Type} ==='pdf' ? 'None': 'MultiSelect'}" noDataText="{i18n>NO_DATA}" growing="true"
		growingScrollToLoad="true">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="{i18n>LBL_PLACEHOLDER}" level="H1"/>
				<ToolbarSpacer/>
				<ComboBox>
					<items>
						<core:Item text="Business1" key="bus1"/>
						<core:Item text="Business2" key="bus2"/>
						<core:Item text="Business3" key="bus3"/>
					</items>
				</ComboBox>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column vAlign="Middle">
				<Label text="{i18n>name}"/>
			</Column>
			<Column vAlign="Middle" minScreenWidth="Tablet" demandPopin="true">
				<Label text="{i18n>techName}"/>
			</Column>
		</columns>
	</Table>
</core:FragmentDefinition>